{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": ".",
    "tsBuildInfoFile": ".tsbuildinfo",

    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "types": []
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
